<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title><%= category.name %></title>
  <meta name="description" content="<%= `Random ${category.name} generator item list` %>">
  <meta property="og:description" content="<%= `Random ${category.name} generator item list` %>">
  <style>
  body {
    background: #111111;
    color: #ffffff;
    margin: 0;
    font-family: sans-serif;
    text-align: center;
  }
  #main {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1em;
    text-align: center;
    margin: 0 auto;
    background: #222222;
    line-height: 200%;
    border: 2px solid #442222;
    border-radius: 4px;
    box-shadow: 0 0 16px #442222;
  }
  p {
    margin: 1em auto;
    padding: 0 1em;
    max-width: 700px;
  }
  button {
    background: #ff4444;
    color: #ffffff;
    border: none;
    font-size: 1em;
    cursor: pointer;
  }
  button:hover {
    background: #ff2222;
  }
  button:active {
    background: #ff0000;
  }
  a {
    color: #fff;
  }
  .row, #buttons {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }
  #items {
    display: flex;
    flex-direction: column; 
    align-items: center;
  }
  .item {
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #ff4444;
    padding: 1px;
  }
  .rating {
    flex: 0 0 auto;
    margin-left: 1em;
    text-align: left;
  }
  input[type="range"] {
    accent-color: #ff4444;
  }
  input {
    flex: 1;
    background-color: #333333;
    color: #ffffff;
    border: none;
    box-sizing: border-box;
  }
  #search {
    display: flex;
    align-items: stretch;
  }
  @media (orientation: landscape) {
  	#main, #items, #buttons, #search {
  		width: 50%;
  	}
  }
  @media (orientation: portrait) {
    	#main, #items, #buttons, #search {
    	  width: 75%;
    	}
   }
  </style>
</head>
<body>
  <h1>
    <a href="/<%= urlParams.replace(/^&/, '?') %>">Generators</a> / 
    <a href="/<%= category.name %><%= urlParams.replace(/^&/, '?') %>"><%= category.name %></a> / 
    <a target="_blank" href="/<%= category.name %>?action=list<%= urlParams %>">list</a>
  </h1>
  <div id="main">
    <span id="search"><input id="filter" placeholder="Filter" onkeyup="filter()"> <button onclick="toggle()">more</button><br></span>
    <div id="min-max" style="display:none;"><br>
      <label for="min">min: <span id="min-value"><%= min %>%</span></label>
      <input type="range" id="min" min="0" max="100" value="<%= min %>" step="5" oninput="range('min')"><br>
      <label for="max">max: <span id="max-value"><%= max %>%</span></label>
      <input type="range" id="max" min="0" max="100" value="<%= max %>" step="5" oninput="range('max')"><br>
      <button onclick="go()">Go</button>
    </div><br>
    <div id="buttons">
      <button id="sortItem" onclick="sort('item')">Name</button>
      <button id="sortRating" onclick="sort('rating')">Rating</button>
    </div>
    <div id="items">
    <% items.forEach(item => { %>
      <div class="row">
        <a class="item" href="/<%= category.name %>/<%= item.id %> <%= urlParams.replace(/^&/, '?') %>" title="<%- item.content %>"><%- item.content %></a>
        <span class='rating' style="color:hsl(<%= item.rating * 1.2 %>,100%,50%)">
          <%= parseFloat(Number(item.rating).toFixed(2)) %>%
        </span>
      </div>
    <% }); %>
    </div>
  </div>
<script>
let dir = 1
let active = null;
function sort(type) {
  dir = active === type ? -dir : 1;
  active = type;
  const list = document.getElementById('items');
  const rows = Array.from(list.querySelectorAll('.row'));
  rows.sort((a, b) => {
    if (type === 'item') {
      return a.querySelector('.item').textContent
        .localeCompare(b.querySelector('.item').textContent) * dir;
    }
    const ra = parseFloat(a.querySelector('.rating').textContent);
    const rb = parseFloat(b.querySelector('.rating').textContent);
    return (ra - rb) * dir;
  });
  list.innerHTML = '';
  rows.forEach(r => list.appendChild(r));
  document.getElementById('sortItem').textContent = 'Name' + (active === 'item' ? (dir === 1 ? ' ▲' : ' ▼') : '');
  document.getElementById('sortRating').textContent = 'Rating' + (active === 'rating' ? (dir === 1 ? ' ▲' : ' ▼') : '');
}
function filter() {
  let query = document.getElementById('filter').value.toLowerCase();
  let rows = document.querySelectorAll('#items .row');
  rows.forEach(row => {
    let text = row.querySelector('.item').textContent.toLowerCase();
    row.style.display = text.includes(query) ? '' : 'none';
  });
}
function range(a) {
  let min = document.getElementById('min');
  let max = document.getElementById('max');
  document.getElementById(`${a}-value`).innerText = `${document.getElementById(a).value}%`;
  if (+min.value > +max.value) {
    if (a === 'min') {
      max.value = min.value;
      document.getElementById('max-value').innerText = `${min.value}%`;
    } else {
      min.value = max.value;
      document.getElementById('min-value').innerText = `${max.value}%`;
    }
  }
}
function go() {
  let min = document.getElementById('min').value;
  let max = document.getElementById('max').value;
  window.location.href = `/<%= category.name %>?action=browse&min=${min}&max=${max}`;
}
function toggle() {
  let mm = document.getElementById('min-max');
  mm.style.display = mm.style.display === 'none' ? 'block' : 'none';
}
</script>
</body>

</html>


